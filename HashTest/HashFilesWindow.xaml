<ui:FluentWindow x:Class="Hasher.HashFilesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hasher"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:viewmodels="clr-namespace:Hasher.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:HashFilesViewModel}"
        mc:Ignorable="d"
        ExtendsContentIntoTitleBar="True"
        Title="HashFilesWindow" Height="450" Width="800">
    <Grid>
        <ui:TitleBar/>
        <StackPanel 
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            
            <ui:Button 
            Command="{Binding GetFileNamesCommand}">
                Hash it
            </ui:Button>
            <Label Content="{Binding CurrentFileName}"/>
            <ProgressBar Maximum="100" Value="{Binding CurrentProgress}"/>
            <Label Content="Total Progress"/>
            <ProgressBar Maximum="100" Value="{Binding OverallProgress}"/>
            <TextBlock Text="{Binding FileNames}"/>
            
        </StackPanel>
    </Grid>
</ui:FluentWindow>
